              a(value='c1') COMP 1
            li
              a(value='c2') COMP 2
            li
              a(value='c3') COMP 3
            li
              a(value='c4') COMP 4
            li
              a(value='j1') JMC 1
            li
              a(value='j2') JMC 2
            li
              a(value='j3') JMC 3
            li
              a(value='j4') JMC 4
            li
              a(value='i2') ISE 2
            li
              a(value='i3') ISE 3
            li
              a(value='i4') ISE 4
            li
              a(value='v5') Computing
            li
              a(value='s5') Computing Spec&period;
            li
              a(value='a5') Advanced
            li
              a(value='r5') Research
            li
              a(value='y5') Industrial
            li
              a(value='b5') Bioinformatic
            li
