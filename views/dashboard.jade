  h3 Due in next week&period;&period;&period;
  table#exercises_table.table.table-hover.wide_table.module_table.table-striped.table-bordered.hidden
    tr
      th.module(style='text-align : left') Module
      th.id_name(style='text-align : left') ID - Name
      th.small Due On
      th.small Spec Link
      th.small Given link
  table
