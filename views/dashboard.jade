include grading_schema

mixin detail-row(label, binding)
  tr
    td
      b= label
    td
      span!= '{{ ' + binding + ' }}'

#identity-container.row
  .span8
    h1.section-header Identity
    table.table.table-bordered.table-striped
      tbody
        tr
          td.profile-picture-container(rowspan='7', width='120px')
            img#cc-identity-profile-image.profile-image(src='')
          td
            b First Name
          td
            span!= '{{ dashboard.first_name }}'
        +detail-row('Last Name', 'dashboard.last_name')
        +detail-row('Login', 'dashboard.login')
        +detail-row('Category', 'dashboard.category')
        +detail-row('Candidate No.', 'dashboard.candidate_number')
        +detail-row('CID', 'dashboard.cid')
        +detail-row('Personal Tutor', 'dashboard.personal_tutor')
  .span4
    h1.section-header Other Links
    ul.nav.nav-tabs.nav-stacked
      li.disabled
        a(href='#')
          .list-icon-container
            i.icon-bar-chart
          .list-text Analytics
      li
        a#cc-other-grading-schema(data-target='#grading-schema-modal', data-toggle='modal', href='#', role='button')
          .list-icon-container
            i.icon-key
          .list-text Department Grading Schema
      li.disabled
        a#cc-other-documentation(href='#')
          .list-icon-container
            i.icon-file-alt
          .list-text Documentation
      li
        a#cc-other-extensions(href='#')
          .list-icon-container
            i.icon-exclamation-sign
          .list-text Late Submissions&sol;Extensions
      li.disabled
        a(href='#')
          .list-icon-container
            i.icon-briefcase
          .list-text Lecture Notes &plus; Exs Registration
      li
        a#cc-other-projects-portal(href='#')
          .list-icon-container
            i.icon-lightbulb
          .list-text Projects Portal
      li.disabled
        a(href='#')
          .list-icon-container
            i.icon-magic
          .list-text Special Activities
hr
#exercises-container.row
  .span12
    h1.section-header
      | Exercises
      #exercise-nav
        #term-selector.btn-group(data-toggle='buttons-radio')
          button.btn(value='1') Autumn
          button.btn(value='3') Spring
          button.btn(value='5') Summer
          button.btn(value='6') June-July
        br
        button#ex-go-btn.btn Go&excl;
        span#current-class.label
        #class-selector.btn-group
          a.btn.dropdown-toggle(data-toggle='dropdown', href='#')
            | Select Class
            span.caret
          ul.dropdown-menu
