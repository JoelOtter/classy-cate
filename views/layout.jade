mixin scripts
  script(src='/lib/jquery/dist/jquery.js')
  script(src='/lib/angular/angular.js')
  script(src='/lib/bootstrap/dist/js/bootstrap.js')
  script(src='/js/app.js')

mixin stylesheets
  link(rel='stylesheet', type='text/css', href='/lib/bootstrap/dist/css/bootstrap.css')
  link(rel='stylesheet', type='text/css', href='/lib/font-awesome/css/font-awesome.css')
  link(rel='stylesheet', type='text/css', href='/css/app.css')

mixin navbar
  .navbar
    .navbar-inner
      .container
        a.btn.btn-navbar(data-target='.nav-collapse', data-toggle='collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        .brand(href='/')
          | CATE
          a(href='/ChangesLog.html')
            span#cc-version
        .nav-collapse.collapse
          ul.nav
            li
              a#nav-dashboard(href='#') Dashboard
            li
              a#nav-exercises(href='#') Exercises
            li
              a#nav-grades(href='#') Grades
            li
              a#nav-teachdb(href='https://teachdb.doc.ic.ac.uk/db/') Teach DB
            li
              a#nav-internalreg(href='https://dbc.doc.ic.ac.uk/internalreg') Module Registration
          ul.nav.pull-right
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown', href='#')
                span#cc-current-year
                span Change Year
                b.caret
              ul#cc-year-dropdown.dropdown-menu(role='menu')

mixin footer
  footer.footer
    .container
      p
        | Created out of frustration and &heartsuit; by
        a(href='http://pete-hamilton.co.uk') Pete Hamilton &NonBreakingSpace;
        a(href='http://www.twitter.com/peterejhamilton')
          i.icon-twitter
        a(href='http://www.github.com/petehamilton')
          i.icon-github
      p
        | This journey is 1&percnt; finished&period; Help lessen the pain -
        a(href='https://github.com/petehamilton/classy-cate')
          i.icon-github-alt

doctype html
html(lang='en-US', ng-app='classy')
  head
    title Classy
    +stylesheets()
  body
    include components/navbar
    .background
      .container(ui-view)
        +navbar()
        #page-content
        .row
          #old-cate-button-container.span12.centered
            span#old-cate-button.btn.btn-mini But I liked the old CATE&excl;
      +footer()
  +scripts()
