= form_for("user", :url => '/login', :html => {:class => 'login-form'}) do |f|
  %p.field
    = text_field_tag 'user[login]', nil, :placeholder => 'Username', :autocomplete => :off
    %i.icon-user.icon-large
  %p.field
    = password_field_tag 'user[password]', nil, :placeholder => 'Password'
    %i.icon-lock.icon-large
  %p.submit
    %button{:type => :submit, :name => :commit, :go => true}
      %i.icon-arrow-right.icon-large